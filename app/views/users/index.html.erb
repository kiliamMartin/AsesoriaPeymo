<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>User_id</th>
      <th>Name</th>
      <th>Surname</th>
      <th>Phone</th>
      <th>Namecompany</th>
      <th>Address</th>
      <th>Email</th>
      <th>Role</th>
      <th>Password</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.surname %></td>
        <td><%= user.phone %></td>
        <td><%= user.nameCompany %></td>
        <td><%= user.address %></td>
        <td><%= user.email %></td>
        <% Role.all.each do |u| %>
          <%if user.role_id == u.id%>
            <td><%= u.nameRole%></td>
          <%end%>
        <%end%>
        <td><%= user.password_digest %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

